{
  "parser": "babel-eslint",
  "parserOptions": { "ecmaVersion": 7 },
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "node/no-unsupported-features": "off",
    "max-len": ["error", 120]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  }
}
